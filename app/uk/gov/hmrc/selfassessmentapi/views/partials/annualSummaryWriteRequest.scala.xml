@import uk.gov.hmrc.domain.SaUtr
@import uk.gov.hmrc.selfassessmentapi.controllers.api._
@import uk.gov.hmrc.selfassessmentapi.views.Helpers._

@(saUtr: SaUtr, taxYear: TaxYear, annualSummaryType: AnnualSummaryType)

<section id="@(s"sample-request-${annualSummaryType.name}")">
    <title>@(annualSummaryType.title) request</title>
    <resource>PUT /self-assessment/@saUtr/@taxYear/@(annualSummaryType.name)</resource>
    <description>@{annualSummaryType.description("Creates or updates")}</description>
    <json>@prettyPrint(annualSummaryType.example)</json>
    @if(annualSummaryType.fieldDescriptions.nonEmpty) {
    <table>
        <headings>
            <cell>Name</cell>
            <cell>Type</cell>
            <cell>Description</cell>
        </headings>
        <rows>
            @annualSummaryType.fieldDescriptions.map(fd => fieldDescriptionShort(fd))
        </rows>
    </table>
    }
</section>
