@import uk.gov.hmrc.domain.SaUtr
@import uk.gov.hmrc.selfassessmentapi.controllers.api._
@import uk.gov.hmrc.selfassessmentapi.views.Helpers._

@(saUtr: SaUtr, taxYear: TaxYear, annualSummaryType : AnnualSummaryType)
<endpoint>
    <name>Retrieve @{annualSummaryType.documentationName}</name>
    <description>This endpoint retrieves a @{annualSummaryType.documentationName}</description>
    <section id="resource">
        <title>Resource</title>
        <resource><![CDATA[GET /self-assessment/{utr}/{tax-year}/@{annualSummaryType.name}]]></resource>
    </section>
    @partials.annualSummaryPathParams(saUtr, taxYear)
    @partials.requestHeaders(false)
    @partials.authorisation(false)
    @partials.annualSummaryReadResponse(saUtr, taxYear, annualSummaryType)
</endpoint>
